<body>
    <h2 class="text-center" style="margin-top: 20px; background-color: darkgrey;">Employee Data</h2>
    <table class="table" style="margin-top: 30px;background-color: darkseagreen;">
        <thead>
          <tr>
            <th scope="col">Sr.No</th>
            <th scope="col">Name</th>
            <th scope="col">Email Id</th>
            <th scope="col">Mobile</th>
            <th scope="col" colspan="2">Action</th>
          </tr>
        </thead>
        <tbody>
         <% data.map((val,index)=>{ %>
                <tr>
                    <td><%= index+1 %></td>
                    <td><%= val.name %></td>
                    <td><%= val.email %></td>
                    <td><%= val.mobile %></td>
                    <td> <a href="http://localhost:8000/deldata/<%=val._id%>" class="btn btn-danger">Delete</a></td>
                    <td><a href="http://localhost:8000/updatedata/<%=val._id%>&&<%= val.name%>&&<%= val.email%>&&<%= val.mobile%>" class="btn btn-warning">Update</a></td>

                </tr>
                <% })%>
         </tbody>
      </table>
      
</body>
</html>